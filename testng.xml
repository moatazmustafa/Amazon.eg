<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Amazon Suite">
    <!-- TestNG Listeners -->
    <listeners>
        <listener class-name="Listeners.ITestResultListenerClass"/>
        <listener class-name="Listeners.IInvokedMethodListenerClass"/>
    </listeners>

    <!-- Test Definition -->
    <test name="Amazon Tests">
        <classes>
            <class name="Tests.SignInTest"/>
            <class name="Tests.SignUpTest"/>
            <class name="Tests.ForgetPasswordTest"/>
            <class name="Tests.CategoryAndProductTest"/>
        </classes>
    </test> <!-- Amazon Tests -->
</suite> <!-- Amazon Suite -->
